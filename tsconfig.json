// tsconfig.json
{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", // ou "esnext" se estiver configurando para ES Modules
    "rootDir": "./",       // Ou "./src" se todo o seu código fonte estiver lá
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true // Útil se for importar JSON
  },
  "include": ["**/*.ts"], // Inclui todos os arquivos .ts
  "exclude": ["node_modules", "dist"] // Exclui pastas de módulos e build
}